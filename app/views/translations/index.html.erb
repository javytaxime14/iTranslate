<div class="container">
  <div class="app px-5 py-3 mt-3">
    <h1 class="text-center mt-2">iTranslate</h1>
    <%= form_with url: translate_path, method: :post, local: true do %>
      <div class="row mt-5">
          <div class="col-lg-5">
            <div class="form-group">
              <label for="source">Translate</label>
              <%= text_area_tag :source, @source, class: 'form-control form-control-sm', style: 'width: 100%; height: 100px' %>
            </div>

            <div class="form-group">
              <label for="source_language">From</label>

              <%= select_tag :source_language, options_for_select(@languages, @source_language), class: 'form-control form-control-sm', include_blank: 'Auto-detect' %>
            </div>
          </div>

          <div class="col-lg-2 d-flex align-items-center justify-content-center">
            <button type="submit" class="btn btn-success">
              Translate <i class="fa fa-arrow-right"></i>
            </button>
          </div>

          <div class="col-lg-5">
            <div class="form-group">
              <label for="translation">Translation</label>
              <%= text_area_tag :translation, @translation, class: 'form-control form-control-sm', style: 'width: 100%; height: 100px', readonly: true %>
            </div>

            <div class="form-group">
              <label for="destination_language">To</label>
                <%= select_tag :destination_language, options_for_select(@languages, @destination_language), class: 'form-control form-control-sm' %>
            </div>
          </div>
      </div>
      <div class="row">
        <div class="col-lg-2">
        </div>
        <div class="col-lg-2 d-flex align-items-right justify-content-end">
            <button type="button" class="btn btn-primary btn-sm ml-auto mr-2 my-3">
              Save <i class="fa fa-save"></i>
            </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
